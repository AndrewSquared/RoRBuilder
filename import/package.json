{
  "name": "rorbuilder-import-tool",
  "version": "1.0.0",
  "description": "Tool to import game data files and create RoRBuilder data files.",
  "main": "abilityDecoder.ts",
  "scripts": {
    "start": "ts-node main.ts",
    "test": "jest"
  },
  "author": "Erik Dal√©n <erik.gustav.dalen@gmail.com>",
  "license": "ISC",
  "dependencies": {
    "colors": "^1.4.0",
    "decoders": "^1.17.0",
    "iconv-lite": "^0.5.0",
    "inquirer": "^7.0.0",
    "ts-node": "^8.5.4",
    "typescript": "^3.7.3"
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "all"
  },
  "eslintConfig": {
    "extends": [
      "airbnb-base",
      "plugin:@typescript-eslint/recommended",
      "prettier"
    ],
    "plugins": [
      "@typescript-eslint",
      "import",
      "jest",
      "prettier"
    ],
    "rules": {
      "prettier/prettier": [
        "error"
      ],
      "react/jsx-filename-extension": [
        1,
        {
          "extensions": [
            ".tsx",
            ".jsx"
          ]
        }
      ],
      "@typescript-eslint/array-type": [
        "error",
        {
          "default": "array",
          "readonly": "array"
        }
      ],
      "import/no-unresolved": "off",
      "no-unused-vars": "off",
      "no-undef": "off",
      "no-console": "off",
      "@typescript-eslint/no-unused-vars": [
        "error"
      ],
      "@typescript-eslint/explicit-function-return-type": "off",
      "@typescript-eslint/promise-function-async": "error",
      "@typescript-eslint/prefer-readonly": "error",
      "@typescript-eslint/no-explicit-any": "error",
      "@typescript-eslint/camelcase": [
        "error",
        {
          "properties": "never"
        }
      ],
      "react/prop-types": "off",
      "default-case": "off",
      "no-nested-ternary": "off",
      "react/jsx-one-expression-per-line": "off",
      "import/prefer-default-export": "off"
    },
    "env": {
      "browser": true,
      "node": true
    },
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "project": "./tsconfig.json"
    }
  },
  "devDependencies": {
    "@types/inquirer": "^6.5.0",
    "@types/jest": "^24.0.23",
    "eslint": "^6.7.2",
    "eslint-plugin-jest": "^24.3.6",
    "jest": "^24.9.0",
    "ts-jest": "^26.4.4"
  },
  "jest": {
    "preset": "ts-jest"
  }
}
